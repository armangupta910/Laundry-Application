<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6d6d4"
    tools:context=".booking">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="276dp"
        android:layout_height="52dp"
        android:background="@null"
        android:text="Select Number of Clothes for each Category"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_marginLeft="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.081">

        <TableRow
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/shirt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Shirt"
                android:textAlignment="gravity"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/editTextNumberSigned"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="0" />

            <TextView
                android:id="@+id/tshirt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="T-Shirt"
                android:textAlignment="gravity"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/editTextNumberSigned1"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="0" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/pant"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Pant"
                android:textAlignment="gravity"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/editTextNumberSigned2"
                android:layout_width="103.5dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="0" />

            <TextView
                android:id="@+id/jeans"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Jeans"
                android:textAlignment="gravity"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/editTextNumberSigned3"
                android:layout_width="103.5dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="0" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/shorts"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Shorts"
                android:textAlignment="gravity"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/editTextNumberSigned4"
                android:layout_width="103.5dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="0" />

            <TextView
                android:id="@+id/dupatta"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Dupatta"
                android:textAlignment="gravity"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/editTextNumberSigned5"
                android:layout_width="103.5dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="0" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/kurta"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Kurta"
                android:textAlignment="gravity"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/editTextNumberSigned6"
                android:layout_width="103.5dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="0" />

            <TextView
                android:id="@+id/pyjama"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Pyjama"
                android:textAlignment="gravity"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/editTextNumberSigned7"
                android:layout_width="103.5dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="0" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:background="#D6D6D4">

            <TextView
                android:id="@+id/skirt"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Skirt"
                android:textAlignment="gravity"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/editTextNumberSigned8"
                android:layout_width="103.5dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="0" />

            <TextView
                android:id="@+id/bed"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Bed Sheet"
                android:textAlignment="gravity"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/editTextNumberSigned9"
                android:layout_width="103.5dp"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="0" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pillow"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Pillow Cover"
                android:textAlignment="gravity"
                android:textSize="17dp" />

            <EditText
                android:id="@+id/editTextNumberSigned10"
                android:layout_width="103.5dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:ems="10"
                android:inputType="numberSigned"
                android:text="0" />

            <TextView
                android:id="@+id/towel"
                android:layout_width="100dp"
